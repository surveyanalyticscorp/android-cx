<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_light">


    <!-- Displaying Fragments -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="\t\t This is the sample app for in app feedback. Here we have monitored the screen launch event as a touchpoint.\n\t\t If you launch this screen 3 times. The feedback popup will come with the survey on every 3rd subsequent launch."
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:textStyle="italic"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/send_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Send Feedback"/>

</LinearLayout>