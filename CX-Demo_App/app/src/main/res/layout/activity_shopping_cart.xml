<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_500"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/pro_txt"
            android:src="@drawable/app_icon" />

        <Button
            android:id="@+id/launch_survey"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="45dp"
            android:text="Launch Survey"
            />

        <Button
            android:id="@+id/launch_survey_one"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="45dp"
            android:text="Launch Survey"
            />


        <TextView
            android:id="@+id/track_txt"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pro_txt"
            android:layout_below="@+id/pro_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1.0"
            android:text="@string/slogan"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>

</FrameLayout>